{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "rules": {
    "semi": ["error", "never"],
    "quotes": "off", // Disable linting for quotes
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true // Use single quotes for Prettier formatting
      }
    ]
  }
}
